extends base 

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Create your account
      form.form.form--signup
        .form__group
          label.form__label(for='signup-name') Your Name
          input#signup-name.form__input(type='text', required)
        .form__group
          label.form__label(for='signup-email') Email address
          input#signup-email.form__input(type='email', placeholder='you@example.com', required)
        .form__group.ma-bt-md
          label.form__label(for='signup-password') Password
          input#signup-password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='signup-password-confirm') Confirm Password
          input#signup-password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8')          
        .form__group
          button.btn.btn--green Sign up 

block scripts
  script(src="/js/bundle.js", defer)


