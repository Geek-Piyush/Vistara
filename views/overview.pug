extends base

block content 

  main.main
    .overview-header
      h1.heading-secondary.ma-bt-md= title || 'All Tours'
      .header-controls
        form.form.form--search
          .search-container
            input#search.search__input(type='text', placeholder='Search tours...')
            button.btn.btn--green.btn--small(type='submit')
              svg.search__icon
                use(xlink:href='/img/icons.svg#icon-search')
        button.filter-toggle-btn(type='button')
          svg.filter-icon
            use(xlink:href='/img/icons.svg#icon-sliders')
      
      .filters-menu.hidden
        .filter-group
          label.filter-label Difficulty
          select#filter-difficulty.filter-select
            option(value='') All
            option(value='easy') Easy
            option(value='medium') Medium
            option(value='difficult') Difficult
        .filter-group
          label.filter-label Sort By
          select#sort-by.filter-select
            option(value='') Default
            option(value='price') Budget: Low to High
            option(value='-price') Budget: High to Low
            option(value='ratingsAverage') Rating: Low to High
            option(value='-ratingsAverage') Rating: High to Low
            option(value='duration') Duration: Short to Long
            option(value='-duration') Duration: Long to Short

    .card-container

      if tours && tours.length > 0
        each tour in tours
          .card
            .card__header
              .card__picture
                .card__picture-overlay &nbsp;
                img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
              h3.heading-tertirary
                span= tour.name

            .card__details
              h4.card__sub-heading=  `${tour.difficulty} ${tour.duration }-day tour`
              p.card__text= tour.summary
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-map-pin')
                span= tour.startLocation.description
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-calendar')
                span= tour.startDates[0].toLocaleString('en-in', {month: 'long', year: 'numeric'})
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-flag')
                span= `${tour.locations.length} stops`
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-user')
                span= `${tour.maxGroupSize} peoples`

            .card__footer
              p
                span.card__footer-value= `$${tour.price} `
                | 
                span.card__footer-text per person
              p.card__ratings
                span.card__footer-value= tour.ratingsAverage
                | 
                span.card__footer-text= `rating (${tour.ratingsQuantity})` 
              a.btn.btn--green.btn--small(href= `/tour/${tour.slug}`) Details
      else
        .no-data
          p No tours found. Try a different search.
